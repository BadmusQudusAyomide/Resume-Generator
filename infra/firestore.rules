rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Resumes: Allow creation by authenticated users, reading/writing by owner or if public
    match /resumes/{resumeId} {
      // Allow reading if user owns the resume or if it's public
      allow read: if request.auth != null &&
        (resource.data.ownerId == request.auth.uid || resource.data.isPublic == true);

      // Allow creation (new document)
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;

      // Allow updates and deletes only by owner
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Templates are readable by all authenticated users
    match /templates/{templateId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can modify templates
    }

    // Exports are readable by owner only
    match /exports/{exportId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // AI requests are readable by owner only
    match /aiRequests/{requestId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Allow authenticated users to read their own data from any collection
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}
